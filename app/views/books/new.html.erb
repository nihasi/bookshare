<div class="search">
    <div class="row">
        <div class="text-center">
            <%= form_tag(new_book_path, method: :get, class: "form-inline") do %>
                <%= hidden_field_tag :base_book_id, params[:base_book_id] %>
                <div class="form-group">
                    <%= text_field_tag :title, @title, class: "form-control input-lg", placeholder: "タイトルを入力", size: 40 %>
                </div>
                <%= submit_tag "本を検索", class: "btn btn-success btn-lg" %>
            <% end %>
        </div>
    </div>
</div>

<%= render "books", books: @books, base_book_id: params[:base_book_id] %>