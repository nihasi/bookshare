<% if current_user.like?(book) %>
  <%= form_tag(like_path(book.id), method: :delete) do %>
    <%= hidden_field_tag :book_id, book.id %>
    <%= submit_tag 'Like', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(likes_path) do %>
    <%= hidden_field_tag :book_isbn, book.isbn %>
    <%= submit_tag 'Like it', class: 'btn btn-primary' %>
  <% end %>
<% end %>